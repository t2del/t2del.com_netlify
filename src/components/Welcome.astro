---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";

interface Props {
  title: string;
}
const title = Astro.props.title || "Welcome to Astro!";
---

<div
  id="container"
  class="flex h-[50rem] flex-col items-center justify-center pb-20"
>
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <div>
    <section id="hero">
      <div class="animate-fade-up flex items-center justify-center gap-4">
        <img
          src={astroLogo.src}
          class="!my-0 hidden"
          width="115"
          height="48"
          alt="Astro Homepage"
        />
        <h1 class="text-2xl md:text-4xl">{title}</h1>
      </div>
      <h2 class="animate-fade-up text-base/8 md:text-lg/10 text-center ">
        10+ years of experienced Full-Stack Developer proficient in 
        <br>PHP, HTML, CSS, JavaScript, and MySQL. 
        <br>Hands-on expertise with WordPress and dedicated to 
        <br>exceptional project completion and client satisfaction.
      </h2>
      <section id="links" class="animate-fade-up flex items-center justify-center gap-4">
        <a class="btn btn-outline btn-secondary" href="https://docs.astro.build"
          >Read More</a
        >
      
      </section>
    </section>
  </div>
</div>

<style>
  #background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 50rem;
    z-index: -1;
    filter: blur(100px);
  }
</style>
