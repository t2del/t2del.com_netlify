---
// src/components/LanguageToggleWrapper.astro
import LanguageToggle from './LanguageToggle.jsx';

// Define configuration constants (must match astro.config.mjs)
const ALL_LOCALES = ['en', 'es'];
const DEFAULT_LOCALE = 'en';

// Astro.currentLocale is set by Astro's i18n middleware
const currentLocale = Astro.currentLocale || DEFAULT_LOCALE;

// IMPORTANT: Determine if the default locale is prefixed.
// This example assumes 'prefixDefaultLocale: false' in astro.config.mjs
// If 'prefixDefaultLocale: true', set this to true.
const PREFIX_DEFAULT = false; 
---

<div class="lang-switcher-wrapper">
  <LanguageToggle 
    currentLocale={currentLocale} 
    allLocales={ALL_LOCALES} 
    prefixDefault={PREFIX_DEFAULT}
    client:load 
  />
</div>