---
interface Props {
  date: Date;
}
const { date } = Astro.props;
const dateString = new Date(date);
const formattedDate = dateString.toLocaleDateString('en-US', { // Customize locale and options
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'Asia/Singapore' // Important: Set your desired timezone!
});
---

<time datetime={formattedDate}>{formattedDate}</time>