---
import type { CollectionEntry } from "astro:content";
// import { Picture, Image  } from "astro:assets";
import { getImage, Image   } from "astro:assets";
const localeLang = Astro.currentLocale ?? 'en';
// Define a type that maps locale strings to collection names
type LocaleCollectionMap = {
  'en': 'projects';
  'es': 'projectsES';
  // Add more locales as needed
  // 'fr': 'projectsFR'; 
};
// 1. Derive collection name types from the map keys (cannot index with a runtime string)
type LocaleKey = keyof LocaleCollectionMap;
type CurrentCollectionName = LocaleCollectionMap[LocaleKey] & string;
// 2. Define the Props using the dynamically determined collection name
type Props = {
  // Use the calculated type to get the correct CollectionEntry type
  entry: CollectionEntry<CurrentCollectionName>;
};
const { entry } = Astro.props;

// import myImage from entry.data.heroImage;
const optimizedBackgroundImage = await getImage({
  src: entry.data.heroImage ?? "/placeholder.png",
  format: "webp", // Explicitly request WebP format
});
import { getRelativeLocaleUrl } from 'astro:i18n';

---


  <div class="m-auto max-w-[1440px] ">
    <a href={getRelativeLocaleUrl(localeLang, `projects/${entry.slug}`)} class="relative group flex flex-col  transition-colors duration-300 ease-in-out rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white" data-astro-prefetch>
      <article class="inline-grid w-full rounded-lg bg-color-75 px-2 md:px-2 py-2 md:py-2" data-pagefind-body>
        <div class="mb-2 overflow-auto rounded-lg">
          <Image 
            layout='constrained'
            width={800}
            height={400}
            alt={entry.data.title}
            fetchpriority="high"
            loading="lazy" // loading="eager"
            src={optimizedBackgroundImage.src ?? "/placeholder.png"}
            style={`view-transition-name: vt-post-featured-image-${entry.slug}; object-fit:contain`}
          />
        </div>
        <h4 class="font-semibold mt-2" style={`view-transition-name: vt-post-featured-title-${entry.slug};`}>
          {entry.data.title}
        </h4>
      </article>
    </a>
  </div>


<style>
  .flex-col {
    justify-content: space-evenly;
  }
  .description {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }
  @media only screen and (max-width: 600px) {
    img.custom-img  {
      width: 100%;
      max-width: 180px;
    }
  }
</style>