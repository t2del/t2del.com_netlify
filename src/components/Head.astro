---
import globalStyles from "../styles/global.css?inline";
import Analytics from "./common/Analytics.astro?inline";
import { metadata, config } from "../consts";
import { default as contacts } from "../data/contacts.json";

// This component can be used on any page
const { title, description, image, type, publishDate, updateDate, author } =
  Astro.props;

const pageUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Add image path to site image.
const imagePath = image || metadata.image;
const siteBase = config.base.endsWith("/")
  ? config.base.slice(0, -1)
  : config.base;
const siteImage = imagePath.startsWith("http")
  ? imagePath
  : new URL(
      imagePath.startsWith("/")
        ? `${siteBase}${imagePath}`.replace(/\/+/, "/")
        : `${siteBase}/${imagePath}`,
      Astro.site,
    ).toString();

const social = contacts[0]?.social ?? {};
const twitterUrl =
  "twitter" in social && Array.isArray(social.twitter) && social.twitter[0]
    ? social.twitter[0]
    : "";
const twitterHandle = twitterUrl ? `@${twitterUrl.split("/").pop()}` : "";

const schema = {
  "@context": "https://schema.org",
  "@type": type === "article" ? "Article" : "WebPage",
  name: title || metadata.title,
  description: description || metadata.description,
  url: pageUrl,
  image: siteImage,
  ...(type === "article" && {
    headline: title,
    datePublished: publishDate,
    ...(updateDate && { dateModified: updateDate }),
    ...(author && {
      author: {
        "@type": "Person",
        name: author.name,
        ...(author.site && { url: author.site }),
      },
    }),
  }),
};
---

<!-- Common meta tags -->
<title>{title || metadata.title}</title>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="description" content={description || metadata.description} />
<meta name="keywords" content={metadata.keywords} />
<meta name="author" content={metadata.author} />
<meta name="robots" content={metadata.robots} />
<link rel="canonical" href={pageUrl} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href={`${config.base}/favicon.ico`} />
<meta id="theme-color-meta" name="theme-color" content="#ffffff" />

<!-- Open Graph (Facebook, LinkedIn) -->
<meta property="og:type" content={type || metadata.type} />
<meta property="og:title" content={title || metadata.title} />
<meta property="og:description" content={description || metadata.description} />
<meta property="og:image" content={siteImage} />
<meta property="og:url" content={pageUrl} />
<meta property="og:site_name" content={metadata.title} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title || metadata.title} />
<meta
  name="twitter:description"
  content={description || metadata.description}
/>
<meta name="twitter:image" content={siteImage} />
<meta name="twitter:url" content={pageUrl} />
{twitterHandle && <meta name="twitter:site" content={twitterHandle} />}
{twitterHandle && <meta name="twitter:creator" content={twitterHandle} />}

<!-- Apple -->
<meta name="apple-mobile-web-app-title" content={title || metadata.title} />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />

<!-- Microsoft -->
<meta name="msapplication-TileColor" content="#ffffff" />
<meta name="msapplication-TileImage" content="/mstile-144x144.png" />

<!-- Structured data (Schema.org) -->
<script
  type="application/ld+json"
  is:inline
  set:html={JSON.stringify(schema)}
/>

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Global styles -->
<style is:inline set:html={globalStyles}></style>

<!-- Analytics -->
<Analytics />
