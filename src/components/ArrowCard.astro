---
import type { CollectionEntry } from "astro:content";
// import { Picture, Image  } from "astro:assets";
import { getImage, Image   } from "astro:assets";
type Props = {
  entry: CollectionEntry<"projects">;
}

const { entry } = Astro.props;

// import myImage from entry.data.heroImage;
const optimizedBackgroundImage = await getImage({
  src: entry.data.heroImage ?? "/placeholder.png",
  format: "webp", // Explicitly request WebP format
});
---


  <div class="m-auto max-w-[1440px] px-2 md:px-2 md:pt-4">
    <a href={`/${entry.collection}/${entry.slug}`} class="relative group flex flex-col  rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out">
      <article class="inline-grid w-full rounded-lg bg-color-75 px-4 md:px-4 py-2 md:py-4" data-pagefind-body>
        <div class="mb-4 overflow-auto rounded-lg">
          <Image 
            layout='constrained'
            width={900}
            height={600}
            alt={entry.data.title}
            fetchpriority="high"
            loading="lazy" // loading="eager"
            src={optimizedBackgroundImage.src ?? "/placeholder.png"}
            style={`view-transition-name: vt-post-featured-image-${entry.slug}; object-fit:contain`}
          />
        </div>
        <h4 class="font-semibold" style={`view-transition-name: vt-post-featured-title-${entry.slug};`}>
          {entry.data.title}
        </h4>
      </article>
    </a>
  </div>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 24 24"
    class="absolute top-1/2 right-2 -translate-y-1/2 size-5 stroke-2 fill-none stroke-current hide">
    <line x1="5" y1="12" x2="19" y2="12" class="translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out" />
    <polyline points="12 5 19 12 12 19" class="-translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out" />
  </svg>

<style>
  .flex-col {
    justify-content: space-evenly;
  }
  .description {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }
  @media only screen and (max-width: 600px) {
    img.custom-img  {
      width: 100%;
      max-width: 180px;
    }
  }
</style>