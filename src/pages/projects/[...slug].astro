---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";

export async function getStaticPaths() {
  const projects = (await getCollection("projects"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}
type Props = CollectionEntry<"projects">;

const project = Astro.props;
const { Content } = await project.render();

---

<PageLayout title={`${project.data.title} | ` } description={project.data.desc}>
  <Container containerWidth="mx-auto max-w-[1440px] px-5">
    <div class="animate">
      <BackToPrev href="/projects">Back to projects</BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={project.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(project.body)}
        </div>
      </div>
      <div class=" text-2xl font-semibold text-black dark:text-white" style={`view-transition-name: vt-post-featured-title-${project.slug};`}>
        {project.data.title}
      </div>
      {(project.data.siteUrl) && (
        <nav class="animate flex gap-1">
          {project.data.siteUrl && (
            <Link href={project.data.siteUrl} external>
              Visit Site
            </Link>
          )}         
        </nav>
      )}
    </div>    
    <article class="">
      <div class="featured-image">
        <img src={project.data.heroImageScroll} style={`view-transition-name: vt-post-featured-image-${project.slug};`} alt={project.data.title}>
      </div>
      <div class="content" style={`view-transition-name: vt-post-featured-excerpt-${project.slug};`}><Content /></div>
      
    </article>
  </Container>
</PageLayout>

<style>
  .featured-image {
    height: 450px;
    overflow: auto;
  }
</style>